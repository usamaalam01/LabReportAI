# ===========================================
# Lab Report AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in required values.

# --- Database ---
MYSQL_URL=mysql+aiomysql://labreportai:labreportai@mysql:3306/labreportai
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=labreportai
MYSQL_USER=labreportai
MYSQL_PASSWORD=labreportai

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- LLM (OpenAI) ---
LLM_API_KEY=sk-your-openai-api-key-here
LLM_ANALYSIS_MODEL=gpt-4o
LLM_VALIDATION_MODEL=gpt-4o-mini

# --- File Upload ---
MAX_FILE_SIZE=20971520
MAX_PAGES=30

# --- OCR ---
OCR_ENGINE=PaddleOCR

# --- Validation ---
VALIDATION_THRESHOLD=0.8

# --- Security ---
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RATE_LIMIT_PER_IP=10

# --- Storage ---
RETENTION_PERIOD=48
STORAGE_PATH=/app/storage

# --- Twilio (WhatsApp - optional for Phase 1) ---
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
