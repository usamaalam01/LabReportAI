# ===========================================
# Lab Report AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in required values.

# --- Database ---
MYSQL_URL=mysql+aiomysql://labreportai:labreportai@mysql:3306/labreportai
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=labreportai
MYSQL_USER=labreportai
MYSQL_PASSWORD=labreportai

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- LLM (Multi-provider: groq, openai, google) ---
LLM_PROVIDER=groq
LLM_API_KEY=your-api-key-here
# Groq models: llama-3.3-70b-versatile, llama-3.1-8b-instant, gemma2-9b-it
# OpenAI models: gpt-4o, gpt-4o-mini
# Google models: gemini-1.5-pro, gemini-1.5-flash
LLM_ANALYSIS_MODEL=llama-3.3-70b-versatile
LLM_VALIDATION_MODEL=llama-3.1-8b-instant

# --- File Upload ---
MAX_FILE_SIZE=20971520
MAX_PAGES=30

# --- OCR ---
OCR_ENGINE=PaddleOCR

# --- Validation ---
VALIDATION_THRESHOLD=0.8

# --- Security ---
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RATE_LIMIT_PER_IP=10

# --- Storage ---
RETENTION_PERIOD=48
STORAGE_PATH=/app/storage

# --- Twilio (WhatsApp - optional for Phase 1) ---
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
