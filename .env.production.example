# ===========================================
# Lab Report AI - Production Environment
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.production.example .env

# --- Domain ---
# Your DuckDNS subdomain (e.g., labreportai.duckdns.org)
DOMAIN=labreportai.duckdns.org

# --- Database ---
# IMPORTANT: Use strong, unique passwords in production!
MYSQL_URL=mysql+aiomysql://labreportai:CHANGE_ME_STRONG_PASSWORD@mysql:3306/labreportai
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
MYSQL_DATABASE=labreportai
MYSQL_USER=labreportai
MYSQL_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- LLM ---
# Groq free tier: 30 requests/minute
LLM_PROVIDER=groq
LLM_API_KEY=YOUR_GROQ_API_KEY_HERE
LLM_ANALYSIS_MODEL=llama-3.3-70b-versatile
LLM_VALIDATION_MODEL=llama-3.1-8b-instant
LLM_TRANSLATION_MODEL=llama-3.1-8b-instant

# --- CORS ---
# Comma-separated list of allowed origins
CORS_ORIGINS=https://labreportai.duckdns.org,http://frontend:3000

# --- File Upload ---
MAX_FILE_SIZE=20971520
MAX_PAGES=30

# --- OCR ---
OCR_ENGINE=PaddleOCR

# --- Validation ---
VALIDATION_THRESHOLD=0.8

# --- Security ---
RECAPTCHA_SECRET_KEY=placeholder
RECAPTCHA_SITE_KEY=placeholder
RATE_LIMIT_PER_IP=10

# --- Storage ---
RETENTION_PERIOD=48
STORAGE_PATH=/app/storage

# --- Twilio (optional â€” leave as placeholder to disable) ---
TWILIO_ACCOUNT_SID=placeholder
TWILIO_AUTH_TOKEN=placeholder
TWILIO_WHATSAPP_NUMBER=+14155238886

# --- Frontend ---
# Must match your production domain
NEXT_PUBLIC_API_URL=https://labreportai.duckdns.org
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=placeholder
